<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="@dimen/mainLeft"
    android:layout_marginRight="@dimen/mainRight"
    card_view:cardCornerRadius="10dp"
    android:id="@+id/cardvw"
    android:background="#DDE2E8"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/img_tab1"
           android:scaleType="centerCrop"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:src="@mipmap/ic_launcher"/>

       <RelativeLayout
           android:id="@+id/relative_tab1"
           android:layout_marginLeft="20dp"
           android:layout_toRightOf="@id/img_tab1"
           android:layout_width="wrap_content"
           android:layout_centerVertical="true"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/tv_judul_tab1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Juudl"/>

           <TextView
               android:id="@+id/tv_ket_tab1"
               android:layout_below="@id/tv_judul_tab1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Keterangan"/>



       </RelativeLayout>

       <Button
           android:id="@+id/btn_selesai_tab1"
           android:layout_width="60dp"
           android:layout_height="30dp"
           android:text="Selesai"
           android:textColor="#fff"
           android:background="@drawable/btnrounded_bg"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"/>
   </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>